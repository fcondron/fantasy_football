<h1>Your Teams</h1>
<% if !@teams.nil? %>
    <ul class="teams">
  <table>
    <th>Team Name</th>
    <th>Points</th>
    <th>League</th>
  <% @teams.each do |team| %>
  <tr>
    <td><%= link_to team.name, team_path(team) %></td>
    <td><%= team.points %></td>
    <td><%= link_to team.league.name, league_path(team.league.id) %></td>
  </tr>
  <% end %>
  </table>

    </ul>

<% end %>