 <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="teams">Create your team</h1>
         <%= semantic_form_for @team do |f| %>
            <%= render 'shared/error_messages', :object => f.object %>
            <div class="field">
             <%= f.label :team_name %>
             <%= f.text_field :name %>
             <%= f.input :league, :collection => League.all, :as => :select, :include_blank => "Leagues" %>
             <%= f.input :players, :collection => Player.all, :as => :select, :include_blank => "Players" %>
            </div>
            <div class="actions">
                <%= f.submit "Submit" %>
            </div>
        <% end %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
      </td>
    </tr>
  </table>
